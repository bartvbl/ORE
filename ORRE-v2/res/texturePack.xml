		<!-- Slug Hole -->
		<soilTextureSet type="slugHole" extends="baseTile" r="89" g="0" b="0">
			<texture type="ground" src="rock30.png" />
		</soilTextureSet>
	</soilTextureSets>
</ORRTexturePack>