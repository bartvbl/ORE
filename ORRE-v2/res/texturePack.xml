<ORRTexturePack>
	<meta>
		<author>Bart van Blokland</author>
		<name>Default texture pack, rock theme</name>
		<description>none</description>
		<version>1.0</version>
	</meta>
	<config>
		<fileSpecVersion value="1.1" />
		<pathPrefix value="res/textures/"/>
		<defaultTexture src="res/textures/error.png"/>
	</config>
	<soilTextureSets>
		<!-- 	Default ground and roof textures. Using "inheritance" will apply this on other walls
				When the soil map loader finds a tile that is not recognised by its colour, this tile will be assumed.
				The default tile is equal to the solid rock tile. -->
		<soilTextureSet type="baseTile" r="0" g="0" b="0">
			<texture type="ground" src="rock00.png" />
			<texture type="wall" src="rock05.png" />
			<texture type="wallCorner" src="rock55.png" />
			<texture type="invertedCorner" src="rock35.png" />
			<texture type="enforced" src="rock25.png" />
			<texture type="roof" src="rock70.png" />
		</soilTextureSet>
		
		<!-- Basic walls -->
		<soilTextureSet type="soil" extends="baseTile" r="206" g="168" b="237">
			<texture type="wall" src="rock01.png" />
			<texture type="wallCorner" src="rock01.png" />
			<texture type="invertedCorner" src="rock01.png" />
			<texture type="enforced" src="rock21.png" />
		</soilTextureSet>
		<soilTextureSet type="dirt" extends="baseTile" r="173" g="89" b="239">
			<texture type="wall" src="rock02.png" />
			<texture type="wallCorner" src="rock52.png" />
			<texture type="invertedCorner" src="rock32.png" />
			<texture type="enforced" src="rock22.png" />
		</soilTextureSet>
		<soilTextureSet type="looseRock" extends="baseTile" r="148" g="60" b="206">
			<texture type="wall" src="rock03.png" />
			<texture type="wallCorner" src="rock53.png" />
			<texture type="invertedCorner" src="rock33.png" />
			<texture type="enforced" src="rock23.png" />
		</soilTextureSet>
		<soilTextureSet type="hardRock" extends="baseTile" r="116" g="28" b="174">
			<texture type="wall" src="rock04.png" />
			<texture type="wallCorner" src="rock54.png" />
			<texture type="invertedCorner" src="rock34.png" />
			<texture type="enforced" src="rock24.png" />
		</soilTextureSet>
		<soilTextureSet type="solidRock" extends="baseTile" r="82" g="0" b="139">
			<texture type="wall" src="rock05.png" />
