		<soilTextureSet type="rubbleStep1" extends="baseTile" r="41" g="1" b="74">
			<texture type="ground" src="rock10.png" />
		</soilTextureSet>
		<soilTextureSet type="rubbleStep2" extends="baseTile" r="41" g="10" b="74">
